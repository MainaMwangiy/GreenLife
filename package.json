{
  "dependencies": {
    "concurrently": "^6.2.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "nodemailer": "^6.6.3",
    "nodemon": "^2.0.12"
  },
  "scripts": {
    "postinstall": "npm run build",
    "build": "cd client/ && npm install && npm run build",
    "client": "npm start --prefix client",
    "server": "nodemon server.js",
    "start": "concurrently --kill-others-on-fail  \"npm run client\" \"npm run server\""
  }
}
